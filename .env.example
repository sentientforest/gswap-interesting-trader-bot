# GalaChain Private Key (REQUIRED)
# Replace with your actual private key
GALACHAIN_PRIVATE_KEY=your_private_key_here

# Wallet Address (REQUIRED)
# Format: "eth|0x..." or "client|..."
WALLET_ADDRESS=eth|0x1234567890123456789012345678901234567890

# Preferred Token Configuration
PREFERRED_TOKEN_KEY=GALA|Unit|none|none
PREFERRED_TOKEN_NAME=$GALA

# GALA Token Configuration (for minimum balance management)
GALA_TOKEN_KEY=GALA|Unit|none|none

# Trading Parameters
MINIMUM_GALA_BALANCE=100
TRADE_INTERVAL_MS=60000
MAX_SLIPPAGE=5
TRADE_AMOUNT_PERCENTAGE=10

# Server Configuration
PORT=3000

# Feature Flags
ENABLE_TRADING=false
ENABLE_LOGGING=true
USE_MOCK_DATA=true

GSWAP_GATEWAY_BASE_URL=https://gateway-mainnet.galachain.com
GSWAP_DEX_CONTRACT_BASE_PATH=/api/asset/dexv3-contract
GSWAP_TOKEN_CONTRACT_BASE_PATH=/api/asset/token-contract
GSWAP_BUNDLER_BASE_URL=https://bundle-backend-prod1.defi.gala.com
GSWAP_BUNDLING_API_BASE_PATH=/bundle
GSWAP_DEX_BACKEND_BASE_URL=https://dex-backend-prod1.defi.gala.com